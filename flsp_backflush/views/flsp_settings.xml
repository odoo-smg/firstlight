<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_flsp_backflush" model="ir.ui.view">
        <field name="name">res.config.settings.view.flsp.backflush</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="flsp-product.res_config_settings_view_form_flsp"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='flsp-product-right']" position="inside">
                  <span class="o_form_label">Backflush</span>
                  <div class="text-muted">
                      Use Backflush in Manufacturing to consume sub-assemblies.
                  </div>
                  <div class="text-muted">
                      <field name="flsp_backflush"/>
                  </div>
            </xpath>
        </field>
    </record>

</odoo>
