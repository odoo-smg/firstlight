<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <record model="ir.ui.view" id="flsp_backflush_production_form_view">
            <field name="name">flspstock.production.form.inherit</field>
            <field name="model">mrp.production</field>
            <field name="priority">98</field>
            <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
            <field name="arch" type="xml">
                <!-- Deprecated on Odoo 15 -->
                <!--xpath expr="//tree" position="attributes">
                    <attribute name="decoration-muted">is_done</attribute>
                    <attribute name="decoration-warning">quantity_done&gt;product_uom_qty</attribute>
                    <attribute name="decoration-success">not is_done and quantity_done==product_uom_qty</attribute>
                    <attribute name="decoration-info">flsp_backflush == True</attribute>
                    <attribute name="decoration-danger">not flsp_backflush and not is_done and forecast_availability &lt; product_uom_qty</attribute>
                </xpath-->
              <xpath expr="//field[@name='product_id']" position="before">
                    <field name="show_flsp_backflush" invisible="1"/>
              </xpath>
              <xpath expr="//form[1]/sheet[1]/notebook[1]/page[@name='components']/field[@name='move_raw_ids']/tree[1]/field[@name='product_id']" position="after">
                  <field name="flsp_backflush" string="Backflush" attrs="{'column_invisible': [('parent.show_flsp_backflush', '=', False)]}" />
              </xpath>
            </field>
        </record>
</odoo>