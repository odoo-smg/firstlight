<odoo>
    <!--report
        id="report_products"
        model="product.template"
        string="FLSP - Product List"
        name="flspmfg.report_product_view"
        file="flspmfg.report_product"
        report_type="qweb-pdf" /-->

        <record id="report_products" model="ir.actions.report">
            <field name="name">FLSP - Product List</field>
            <field name="model">product.template</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">flspmfg.report_product_view</field>
            <field name="report_file">flspmfg.report_product</field>
            <field name="binding_model_id" ref="model_product_template"/>
            <field name="binding_type">report</field>
        </record>


    <template id="report_product_view">
        <t t-set="data_report_margin_top" t-value="12"/>
        <t t-set="data_report_header_spacing" t-value="9"/>
        <t t-set="data_report_dpi" t-value="110"/>
        <t t-call="web.basic_layout">
                <div class="page">
                    <div class="row">
                        <div class="col-lg-12">
                            <h1>Product List </h1>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <table width="100%" >
                                <thead>
                                    <tr>
                                        <th><h4>Part #</h4></th>
                                        <th><h4>Name</h4></th>
                                        <th class="text-right"><h4>Created On</h4></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="docs" t-as="data">
                                        <tr>
                                            <td class="text-left"><span><t t-esc="data.default_code" /></span></td>
                                            <td class="text-left"><span><t t-esc="data.name" /></span></td>
                                            <td class="text-right"><span><t t-esc="data.create_date" /></span></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <p style="page-break-before:always;"> </p>
        </t>
    </template>

</odoo>
