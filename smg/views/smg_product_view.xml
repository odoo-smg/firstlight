<?xml version="1.0" encoding="UTF-8"?>
 <odoo>
        <!-- Add instructor field to existing view -->
        <record model="ir.ui.view" id="product_smg_form_view">
            <field name="name">product.template.smg.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <group name="group_general">
                    <field name="default_code"  readonly="1" force_save="1"/>
                    <field name="revision_code"/>
                    <field name="legacy_code"/>
                </group>
            </field>
        </record>

        <record model="ir.actions.act_window" id="product_list_action">
            <field name="name">Product</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
        </record>


        <menuitem name="Smartrend" id="smg.menu_root"/>

        <menuitem id="smg_product" name="Products"
                  parent="smg.menu_root"
                  action="product_list_action"/>


</odoo>
