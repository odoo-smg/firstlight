<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="smg.list">
      <field name="name">SMG list</field>
      <field name="model">smg.smg</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="smg.action_window">
      <field name="name">SMG window</field>
      <field name="res_model">smg.smg</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="smg.action_server">
      <field name="name">SMG server</field>
      <field name="model_id" ref="model_smg_smg"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->
-
    <menuitem name="SMG" id="smg.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="smg.menu_1" parent="smg.menu_root"/>
    <menuitem name="Menu 2" id="smg.menu_2" parent="smg.menu_root"/>
    <!-- actions -->

    <menuitem name="List" id="smg.menu_1_list" parent="smg.menu_1"
              action="smg.action_window"/>
    <menuitem name="Server to list" id="smg" parent="smg.menu_2"
              action="smg.action_server"/>
  </data>
</odoo>