              </xpath>
              <xpath expr="//field[@name='product_uom_id']" position="attributes">
                  <attribute name="attrs">{'readonly': [('id', '!=', False)]}</attribute>
              </xpath>
              <!--xpath expr="//button[@name='update']" position="attributes">
